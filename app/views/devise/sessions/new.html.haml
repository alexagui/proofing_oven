= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h1 Sign In

  %p.notice= notice
  %p.alert= alert

  %fieldset#sign_in
    %dl
      %dt= f.label :email
      %dd= f.text_field :email
      %dt= f.label :password
      %dd= f.password_field :password
    %label.checkbox
      %input(type='checkbox')
      Remember me
  %fieldset.actions
    = submit_tag "Sign In"
    = link_to 'Forgot Password', '#'
