.search
  = link_to "Add New Candidate", new_candidate_path(), class: "button add"

%table.standard
  %thead
    %tr
      - ["Name", "Phone", "Email", "Github", "Twitter", "Local", "Willing to Relocate"].each do |th|
        %th= th
  %tbody
    - candidates.each do |candidate|
      %tr
        %td= link_to(candidate.name, candidate_path(candidate))
        %td= candidate.phone
        %td= candidate.email
        %td= candidate.github
        %td= candidate.twitter
        %td= boolean_transformer(candidate.local) 
        %td= boolean_transformer(candidate.relocate)

