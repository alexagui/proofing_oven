- content_for :head do
  = javascript_include_tag "candidate"

%section#candidate_show
  #main
    %header
      = link_to "Edit Candidate", [:edit, candidate], class: "edit"
      %h1= candidate.name
      %dl.small
        %dt Status
        %dd= candidate.status.capitalize
      %dl
        %dt Email
        %dd= candidate.email
      %dl
        %dt Contact Phone
        %dd= candidate.phone
      %dl
        %dt Github
        %dd= candidate.github
      %dl
        %dt Twitter
        %dd= candidate.twitter
      %dl
        %dt Added On
        %dd= candidate.added_on
      %dl
        %dt Local
        %dd= candidate.local? ? "Yes" : "No"
      %dl
        %dt Willing to Relocate
        %dd= candidate.willing_to_relocate? ? "Yes" : "No"
      %dl
        %dt Resume
        %dd
          %a(href='#') john-doe.pdf

    = render partial: 'note', collection: candidate.notes

    = form_for [candidate, note] do |f|
      %fieldset
        %dl
          %dt= f.label :comment, "Note"
          %dd= f.text_area :comment, :rows => 8, :cols => 80
      %fieldset.actions
        = f.submit "Add Note"
        %a(href="#") Cancel
  %aside
    %figure
      %figcaption Profile Image
      = image_tag dummy_image(200, 200), alt: "Profile Image"
